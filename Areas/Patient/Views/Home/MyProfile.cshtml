@model DoctorFinder.EDM.TblPatient

@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Areas/Patient/Views/Shared/_LayoutPatient.cshtml";
}

<div class="bg_color_2">
    <div class="container margin_60_35">
        <div id="login-2">
            <h1>My Profile</h1>
            <form asp-action="MyProfile">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PatientId" />
                <div class="form-group">
                    <label asp-for="PatientName" class="control-label"></label>
                    <input asp-for="PatientName" class="form-control" />
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientAddressLine1" class="control-label"></label>
                    <input asp-for="PatientAddressLine1" class="form-control" />
                    <span asp-validation-for="PatientAddressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientAddressLine2" class="control-label"></label>
                    <input asp-for="PatientAddressLine2" class="form-control" />
                    <span asp-validation-for="PatientAddressLine2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientAddressLine3" class="control-label"></label>
                    <input asp-for="PatientAddressLine3" class="form-control" />
                    <span asp-validation-for="PatientAddressLine3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientEmail" class="control-label"></label>
                    <input asp-for="PatientEmail" class="form-control" />
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientPhoneNumber" class="control-label"></label>
                    <input asp-for="PatientPhoneNumber" class="form-control" />
                    <span asp-validation-for="PatientPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AppointmentId" class="control-label"></label>
                    <select asp-for="AppointmentId" class="form-control" asp-items="ViewBag.AppointmentId"></select>
                    <span asp-validation-for="AppointmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StateId" class="control-label"></label>
                    <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId"></select>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CityId" class="control-label"></label>
                    <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>

        </div>
        <!-- /login -->
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
